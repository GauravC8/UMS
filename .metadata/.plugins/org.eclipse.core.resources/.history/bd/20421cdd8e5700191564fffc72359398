package com.niit.app.service;

import java.util.List;

import javax.transaction.Transactional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.niit.app.dao.*;
i

//@Transactional annotation which is applied at service layer for transaction support
//@service annotation used to annotate service layer implementation classes as below

@Service
public class StudentServiceImplimentation  implements StudentService {
	@Autowired
	private StudentDAO StudentDAO;
	
	@Override
	@Transactional
	public List<Student> getStudents() {
		return StudentDAO.getStudents();
	}

	@Override
	@Transactional
	public void saveStudent(Student theStudent) {
		StudentDAO.saveStudent(theStudent);
	}

	@Override
	@Transactional
	public Student getStudent(int emailId) {
		return StudentDAO.getStudent(emailId);
	}

	@Override
	@Transactional
	public void deleteStudent(int emailId) {
		StudentDAO.deleteStudent(emailId);
	}
}
